<%= stylesheet_link_tag "cadastro" %>
    <header class="cabecalho">
      <%= link_to(image_tag("logo_branco.svg", alt: "Logo da Nimbus", class: "cabecalho-img"), root_path) %>
    </header>
    <!-- Aqui vai o conteiner divisor de conteudo -->
    <div
      id="box"
      class="container mx-auto w-[58rem] px-16 bg-white h-[30.5rem] mt-1 rounded-[50px] flex justify-center items-center p-50"
    >
    <div class="flex gap-16 ">
      <div class="mx-auto  mt-9 max-w-xl sm:mt-1 flex-1 ...">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="sm:mx-auto sm:w-full sm:max-w-lg">
          <h2 class="title">Cadastre-se aqui</h2>
        </div>
        <div class="grid grid-cols-1 gap-x-3 gap-y-3 sm:grid-cols-2">
          <div>
            <label
              for="first-name"
              class="block text-lg font-semibold leading-6 text-gray-900"
              >Nome</label
            >
            <div class="mt-2.5">
              <input
                type="text"
                name="first-name"
                id="first-name"
                autocomplete="given-name"
                class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-2 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
              />
            </div>
          </div>

          <div>
            <%= f.label :email, class: "block text-lg font-semibold leading-6 text-gray-900" %>
            <div class="mt-2.5">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                                class: "block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-2 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div>
            <div class="flex items-center justify-between">
              <%= f.label :password, "Senha", class: "block text-lg font-semibold font-medium leading-6 text-gray-900" %>
            </div>
            <div class="mt-2">
              <%= f.password_field :password, autocomplete: "new-password",
                                    class: "block w-full rounded-lg border-0 py-2 text-gray-900 shadow-sm ring-2 ring-inset ring-gray-400 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div>
            <div class="flex items-center justify-between">
              <%= f.label :password_confirmation, "Confime a sua senha", class: "block text-lg font-semibold font-medium leading-6 text-gray-900" %>
            </div>
            <div class="mt-2">
              <%= f.password_field :password_confirmation, autocomplete: "new-password",
                                    class: "block w-full rounded-lg border-0 py-2 text-gray-900 shadow-sm ring-2 ring-inset ring-gray-400 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <%= f.radio_button :access_type, "teacher" %>Professor<br>
          <%= f.radio_button :access_type, "student" %>Aluno<br>
          <button type="submit" class="block rounded-xl w-[23rem] bg-indigo-800 px-3 py-4 text-base font-bold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
            CONFIRME O SEU CADASTRO
          </button>
      <% end %>
      </div>
    </div>
      <div class="contents">
        <div class="flex-1">
          <%= image_tag "img_side_2.png", alt: "Logo da Nimbus", class: "image_side" %>
        </div>
      </div>
    </div>
  </div>
